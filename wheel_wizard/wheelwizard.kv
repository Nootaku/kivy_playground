#:import player player

MainWindow:

<MainWindow>:
    MenuWindow:
    WizardWindow:
    SlideWindow:
    PlayerWidget:

<MenuWindow>:
    name: 'menu'
    BoxLayout:
        orientation: 'vertical'
        spacing: 25
        padding: 10
        canvas.before:
            Color:
                rgba: .28, .28, .28, 1
            Rectangle:
                size: self.size

        BoxLayout:
            size_hint_y: None
            height: dp(90)
            Image:
                source: 'resources/img/icon.png'
                size_hint_x: .33333333333
                # allow_stretch: True
            Label:
                text: 'Wheel Wizard'
                font_name: 'resources/fonts/Odachi.otf'
                font_size: dp(60)
                color: 0.6, 0.87, 0

        BoxLayout:
            orientation: 'vertical'
            spacing: 8
            Button:
                text: 'Wizard'
                size_hint_y: None
                height: dp(55)
                on_release: app.root.current = 'wizard'
            Button:
                text: 'Slides'
                size_hint_y: None
                height: dp(55)
                on_release: app.root.current = 'slide'
            Button:
                text: 'Street'
                size_hint_y: None
                height: dp(55)
                # on_release: app.root.current = 'slide'
            Button:
                text: 'Slalom'
                size_hint_y: None
                height: dp(55)
                # on_release: app.root.current = 'slide'
            # Adding empty widget to fill the rest of the available space.
            Widget:

<WizardWindow>:
    name: 'wizard'
    canvas.before:
        Color:
            rgba: .28, .28, .28, 1
        Rectangle:
            size: self.size
    # video_player: video_player

    BoxLayout:
        id: wizard_menu
        orientation: 'vertical'
        spacing: 25
        padding: 10

        BoxLayout:
            size_hint_y: None
            height: dp(90)
            Button:
                background_color: (1, 1, 1, 1)
                size_hint_x: .33333333333
                size_hint_y: None
                height: dp(55)
                text: '<< Back'
                # background_normal: 'resources/img/back_icon.png'
                on_release: app.root.current = 'menu'
            Label:
                text: 'Wizard Tricks'
                font_name: 'resources/fonts/Odachi.otf'
                font_size: dp(45)
                color: 0.6, 0.87, 0

        StackLayout:
            spacing: 5
            Button:
                text: 'Fakie Gazelle'
                size_hint: (.5, None)
                size_y: dp(45)
                on_press: root.launchVideo(0)
                on_release: app.root.current = 'player'
            Button:
                text: 'Front Gazelle'
                size_hint: (.5, None)
                size_y: dp(45)
                on_press: root.launchVideo(1)
                on_release: app.root.current = 'player'
            Button:
                text: 'Lion in-out'
                size_hint: (.5, None)
                size_y: dp(45)
                on_press: root.launchVideo(2)
                on_release: app.root.current = 'player'
            Button:
                text: 'Lion out-in'
                size_hint: (.5, None)
                size_y: dp(45)
                on_press: root.launchVideo(3)
                on_release: app.root.current = 'player'

<SlideWindow>:
    name: 'slide'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            size_y: dp(45)
            Button:
                text: 'Back'
                on_release: app.root.current = 'menu'
            Button:
                text: 'Powerslide'
                on_release:
            Button:
                text: 'Parallel slide'
                on_release:

        VideoPlayer:
            source: root.video_path
