<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size

    Label:
        font_size: dp(60)
        font_name: 'fonts/galaxy.ttf'
        text: root.parent.menu_title_image
        size_hint_x: .5
        pos_hint: {'center_x': .5, 'center_y': .6}

    Button:
        font_size: dp(45)
        font_name: 'fonts/mandalore.ttf'
        text: root.parent.menu_button_label
        size_hint: .25, .1
        pos_hint: {'center_x': .5, 'center_y': .4}
        background_normal: ''
        background_color: 1, .25, .6, .85
        on_press: root.parent.onStartButtonPress()
