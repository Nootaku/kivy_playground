#:kivy 2.0.0

WidgetsExample:

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: 'Off'
        on_state: root.onToggle(self)
        font_name: "fonts/Odachi.otf"
        font_size: 45
        size_hint_x: None
        width: "100dp"
    Button:
        text: 'Click here'
        on_press: root.onCount()
        font_name: "fonts/SoleilBook.otf"
        disabled: not root.is_counter_active
    Label:
        text: root.text
        font_name: "fonts/SoleilBook.otf"
        font_size: 21

    Switch:
        id: slider_switch
        active: True
        size_hint_x: None
        width: "100dp"
        font_name: "fonts/Odachi.otf"
    Slider:
        id: my_slider
        value: 50
        disabled: not slider_switch.active
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: str(int(my_slider.value))
            font_name: "fonts/SoleilBook.otf"
            font_size: 21
        ProgressBar:
            max: 100
            value: my_slider.value
            size_hint_y: None
            height: '40dp'
