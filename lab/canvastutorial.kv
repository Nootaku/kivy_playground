#:kivy 2.0.0
#:set foo dp(150)

MoveObject:

<CanvasExample1>:
    canvas:
        Rectangle:
            size: foo, foo
            pos: self.center_x - foo / 2, self.center_y - foo / 2
        Ellipse:
            pos: foo, foo
        Line:
            points: (0, 0, self.width / 4, dp(100), self.width / 2, 0, self.width * 3/4, dp(100), self.width, 0)
            width: 3

<CanvasExample2>:
    canvas:
        Color:
            rgb: 0, 1, 0
        Line:
            circle: (200, 200, 100) # center_x, center_y, radius
            width: 2                # thickness of the line
        Line:
            ellipse: (500, 300, 100, 200) # center_x, center_y, radius_x, radius_y
            width: 2
        Line:
            rectangle: (400, 50, 300, 200) # x, y, width, height
            width: 2

<CenteredCross>:
    canvas:
        Line:
            points: (0, self.center_y, self.width, self.center_y)
        Line:
            points: (self.center_x, 0, self.center_x, self.height)

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: 'Off'
        on_state: root.onToggle(self)
        font_name: "fonts/Odachi.otf"
        font_size: 45
        size_hint_x: None
        width: "100dp"
    Button:
        text: 'Click here'
        on_press: root.onCount()
        font_name: "fonts/SoleilBook.otf"
        disabled: not root.is_counter_active
    Label:
        text: root.text
        font_name: "fonts/SoleilBook.otf"
        font_size: 21

    Switch:
        id: slider_switch
        active: True
        size_hint_x: None
        width: "100dp"
        font_name: "fonts/Odachi.otf"
    Slider:
        id: my_slider
        value: 50
        disabled: not slider_switch.active
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: str(int(my_slider.value))
            font_name: "fonts/SoleilBook.otf"
            font_size: 21
        ProgressBar:
            max: 100
            value: my_slider.value
            size_hint_y: None
            height: '40dp'
